        <item name="android:padding">4dp</item>
    </style>

    <style name="Theme.Beers.BeerTitle" parent="Theme.Beers.BeerLabel">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Beers.BeerSubtitle" parent="Theme.Beers.BeerLabel">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Beers.DialogBeerLabel">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Beers.DialogBeerTitle" parent="Theme.Beers.DialogBeerLabel">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Beers.DialogBeerSubtitle" parent="Theme.Beers.DialogBeerLabel">
        <item name="android:textSize">20sp</item>
    </style>


